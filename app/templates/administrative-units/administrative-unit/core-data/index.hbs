                  </:content>
                </Item>

                <Item>
                  <:label>Rechtsvorm</:label>
                  <:content>
                    {{@model.kboAdministrativeUnit.rechtsvorm}}
                  </:content>
                </Item>
              </:left>
              <:right as |Item|>
                <Item>
