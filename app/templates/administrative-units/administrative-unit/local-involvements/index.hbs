<PageHeader class="au-o-box">
  <:title>Betrokken lokale besturen</:title>
  <:subtitle>{{@model.administrativeUnit.name}}</:subtitle>
  <:alert>
    <AuAlert @alertIcon="info-circle" @alertskin="info" @alertsize="small" class="au-u-margin-bottom-small au-u-margin-top-small">
      <p>Momenteel kan u nog geen betrokken lokale bestuur toevoegen.</p>
    </AuAlert>
  </:alert>
</PageHeader>

<AuDataTable @content={{@model.involvements}} @noDataMessage="Geen betrokken lokale besturen" as |t|>
  <t.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="administrative-unit.name"
        @currentSorting={{this.sort}}
        @label="Naam"
      />
      <AuDataTableThSortable
        @field="administrative-unit.classification.label"
        @currentSorting={{this.sort}}
        @label="Type instelling"
      />
      <AuDataTableThSortable
        @field="involvement-type.label"
        @currentSorting={{this.sort}}
        @label="Type betrokkenheid"
      />
      <AuDataTableThSortable
        @field="percentage"
        @currentSorting={{this.sort}}
        @label="Financieel percentage"
      />
      <th></th>
    </c.header>
    <c.body as |involvement|>
      <td>{{involvement.administrativeUnit.name}}</td>
      <td>{{involvement.administrativeUnit.classification.label}}</td>
      <td>{{involvement.involvementType.label}}</td>
      <td>
        {{#if involvement.percentage}}
          {{involvement.percentage}}%
        {{/if}}
      </td>
      <td>
        <AuLink @route="administrative-units.administrative-unit.local-involvements">Bewerk</AuLink>
      </td>
    </c.body>
  </t.content>
</AuDataTable>