{{page-title "Position"}}

<div class="au-c-body-container au-c-body-container--scroll">
  <div class="au-o-box au-o-flow au-o-flow--large">
    <AuToolbar>
      <AuToolbarGroup>
        <AuHeading>
          {{#let @model.mandatory.mandate.governingBody.isTimeSpecializationOf as |governingBody|}}
            Positie:
            {{@model.mandatory.mandate.roleBoard.label}},
            <br>
            {{governingBody.classification.label}}
            {{governingBody.administrativeUnit.name}}
          {{/let}}
        </AuHeading>
      </AuToolbarGroup>
      <AuToolbarGroup>
        {{! TODO: Replace this with the "edit" route once it is created }}
        <AuLink
          @route="people.person.positions.position"
          @skin="button-secondary"
          @icon="pencil"
          @iconAlignment="left"
        >
          Bewerk
        </AuLink>
      </AuToolbarGroup>
    </AuToolbar>
    <AuHeading @level="2" @skin="3" class="au-u-margin-top-tiny">
      {{@model.person.givenName}}
      {{@model.person.familyName}}
    </AuHeading>

    <div>
      <AuToolbar class="au-u-margin-bottom-small">
        <AuToolbarGroup>
          <AuHeading @level="4" @skin="5">Positie</AuHeading>
        </AuToolbarGroup>
      </AuToolbar>
      <AuCard @standOut={{true}} as |c|>
        <c.content>
          <div class="au-flow au-o-flow--large">
            <div class="au-o-grid">
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Type</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>Mandaat</p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Naam eredienst</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    {{#let
                      @model.mandatory.mandate.governingBody.isTimeSpecializationOf.administrativeUnit
                      as |administrativeUnit|
                    }}
                      <AuLink
                        @route="administrative-units.administrative-unit"
                        @model={{administrativeUnit.id}}
                      >
                        {{administrativeUnit.name}}
                      </AuLink>
                    {{/let}}
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Bestuursfunctie</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>
                      {{@model.mandatory.mandate.roleBoard.label}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </c.content>
      </AuCard>
    </div>

    <div>
      <AuToolbar class="au-u-margin-bottom-small">
        <AuToolbarGroup>
          <AuHeading @level="4" @skin="5">Primaire contactgegevens</AuHeading>
        </AuToolbarGroup>
      </AuToolbar>
      <AuCard @standOut={{true}} as |c|>
        <c.content>
          <div class="au-flow au-o-flow--large">
            <div class="au-o-grid">
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Email</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>{{@model.mandatory.contacts.firstObject.email}}</p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Vaste telefoonnummer</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>{{@model.mandatory.contacts.firstObject.telefone}}</p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Adres</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>
                      {{@model.mandatory.contacts.firstObject.address.fullAddress}}
                    </p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>GSM nummer</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>
                      {{@model.mandatory.contacts.firstObject.telefone}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </c.content>
      </AuCard>
    </div>

    <div>
      <AuToolbar class="au-u-margin-bottom-small">
        <AuToolbarGroup>
          <AuHeading @level="4" @skin="5">Aanstelling</AuHeading>
        </AuToolbarGroup>
      </AuToolbar>
      <AuCard @standOut={{true}} as |c|>
        <c.content>
          <div class="au-flow au-o-flow--large">
            <div class="au-o-grid">
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Start mandaat</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>{{@model.mandatory.startDateFormat}}</p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Bestuursperiode</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>{{@model.mandatory.mandate.governingBody.period}}</p>
                  </div>
                </div>
              </div>
              <div class="au-o-grid__item au-u-1-1 au-u-1-2@medium">
                <div class="au-o-grid">
                  <div class="au-o-grid__item au-u-1-4">
                    <p><strong>Geplande einddatum</strong></p>
                  </div>
                  <div class="au-o-grid__item au-u-3-4">
                    <p>
                      {{@model.mandatory.expectedEndDateFormat}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </c.content>
      </AuCard>
    </div>
  </div>
</div>