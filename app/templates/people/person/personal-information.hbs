                  <div class="au-o-grid">
                    <div class="au-o-grid__item au-u-1-4">
                      <AuLabel for="person-given-name">
                        Voornaam
                      </AuLabel>
                    </div>
                    <div class="au-o-grid__item au-u-3-4">
                      <AuInput
                        @value={{@model.givenName}}
                        @width="block"
                        id="person-given-name"
                      />
                    </div>
                  </div>
                </div>
