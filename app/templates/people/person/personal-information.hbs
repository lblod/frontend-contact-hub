{{page-title "Persoonlijke gegevens"}}

<div class="au-c-main-container__content au-c-main-container__content--scroll">
  <div class="au-o-box au-o-flow">
    <div class="au-o-flow au-o-flow--tiny">
      <AuToolbar>
        <AuToolbarGroup>
          <AuHeading @level="1" @skin="2">
            Persoonlijke gegevens
          </AuHeading>
        </AuToolbarGroup>
      </AuToolbar>
      <AuHeading @level="2" @skin="3">
        {{@model.givenName}} {{@model.familyName}}
      </AuHeading>
    </div>
    <div>
      <AuToolbar class="au-u-margin-bottom-small">
        <AuToolbarGroup>
          <AuHeading @level="3" @skin="5">Persoonlijke gegevens</AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup>
          {{#if this.isEditingPersonalInformation}}
            <AuButton
              @icon="check"
              @iconAlignment="right"
              @loading={{this.savePersonalInformation.isRunning}}
              @disabled={{this.savePersonalInformation.isRunning}}
              form="edit-person-core-info-form"
              type="submit"
            >
              Bewaar
            </AuButton>
          {{else}}
            <AuButton
              @skin="tertiary"
              @icon="pencil"
              @iconAlignment="right"
              {{on "click" this.toggleEditPersonalInformation}}
            >
              Bewerk
            </AuButton>
          {{/if}}
        </AuToolbarGroup>
      </AuToolbar>

      {{#if this.isEditingPersonalInformation}}
        <AuCard as |c|>
          <c.content>
            <form
              class="au-c-form"
              id="edit-person-core-info-form"
              aria-label="edit-person-core-info-form"
              {{on "submit" (perform this.savePersonalInformation)}}
