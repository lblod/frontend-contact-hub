<div class="au-c-body-container au-c-body-container--scroll">
  <div class="au-o-box au-o-flow au-o-flow--large">
    <PageHeader>
      <:title>Contactgegevens</:title>
      <:subtitle>
        {{@model.person.givenName}}
        {{@model.person.familyName}}
      </:subtitle>
      <:action>
        <SecuredArea>
          <:edit>
            <AuLink
              @route="people.person.personal-information.edit"
              @skin="button-secondary"
              @icon="pencil"
              @iconAlignment="left"
            >
              Bewerk
            </AuLink>
          </:edit>
          <:read-only>
            <ReportWrongData />
          </:read-only>
        </SecuredArea>
      </:action>
    </PageHeader>

    <DataCard>
      <:title>Persoonlijke gegevens</:title>
      <:card as |Card|>
        <Card.Columns>
          <:left as |Item|>
            <Item>
              <:label>Voornaam</:label>
              <:content>{{@model.person.givenName}}</:content>
            </Item>
            <Item>
              <:label>Achternaam</:label>
              <:content>{{@model.person.familyName}}</:content>
            </Item>
            {{#if @model.person.firstNameUsed}}
              <Item>
                <:label>Roepnaam</:label>
                <:content>{{@model.person.firstNameUsed}}</:content>
              </Item>
            {{/if}}
          </:left>
        </Card.Columns>
      </:card>
    </DataCard>

    {{! Hide contact information for now because it needs further changes. https://binnenland.atlassian.net/browse/OP-600 }}
    {{#each @model.mandatories as |mandatory|}}
    <DataCard>
      <:title>Contactgegevens:
        {{mandatory.mandate.governingBody.isTimeSpecializationOf.administrativeUnit.classification.label}}
      </:title>
      <:card as |Card|>
        <Card.Columns>
          <:left as |Item|>
            <Item>
              <:label>Organisatie</:label>
              <:content>
                <AuLink
                  @model={{mandatory.mandate.governingBody.isTimeSpecializationOf.administrativeUnit.id}}
                  @route="administrative-units.administrative-unit"
                >
                  {{mandatory.mandate.governingBody.isTimeSpecializationOf.administrativeUnit.name}}
                </AuLink>
              </:content>
            </Item>
            <Item>
              <:label>Positie</:label>
              <:content>
                <AuLink
                  @model={{mandatory.id}}
                  @route="people.person.positions.mandatory"
                >
                  {{mandatory.mandate.roleBoard.label}}
                </AuLink>
              </:content>
            </Item>
            {{#if
              mandatory.contacts.firstObject.email
            }}
              <Item>
                <:label>E-mail</:label>
                <:content>
                  {{mandatory.contacts.firstObject.email}}
                </:content>
              </Item>
            {{/if}}
            {{#if
              mandatory.contacts.firstObject.contactAddress.fullAddress
            }}
              <Item>
                <:label>Adres</:label>
                <:content>
                  {{mandatory.contacts.firstObject.contactAddress.fullAddress}}
                </:content>
              </Item>
            {{/if}}
          </:left>
          <:right as |Item|>
            {{#if
              mandatory.contacts.firstObject.telephone
            }}
              <Item>
                <:label>Telefoonnummer</:label>
                <:content>
                  {{mandatory.contacts.firstObject.telephone}}
                </:content>
              </Item>
            {{/if}}
          </:right>
        </Card.Columns>
      </:card>
    </DataCard> 
    {{/each}}
  </div>
</div>