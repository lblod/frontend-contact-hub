<AuHelpText @error={{true}}>
  {{@error.message}}
  {{#if @error.context.administrativeUnit}}
    <AuLink
      @route="organizations.organization"
      @model={{@error.context.administrativeUnit.id}}
      target="_blank"
    >
      {{@error.context.administrativeUnit.abbName}}
    </AuLink>
  {{/if}}
</AuHelpText>