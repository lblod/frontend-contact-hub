<EditCard @containsRequiredFields={{true}}>
  <:title>Heeft relatie met</:title>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        <Item
          @labelFor="related-provincie"
          @required={{false}}
          @errorMessage={{@model.organization.error.isSubOrganizationOf.message}}
        >
          <:label>Provincie</:label>
          <:content as |hasError|>
            <ProvinceOrganizationSelect
              @selected={{@model.organization.isSubOrganizationOf}}
              @onChange={{fn (mut @model.organization.isSubOrganizationOf)}}
              @error={{hasError}}
              @id="related-provincie"
            />
          </:content>
        </Item>
        <Item @labelFor="related-ocmw">
          <:label>OCMW</:label>
          <:content>
            {{@model.organization.isAssociatedWith.abbName}}
          </:content>
        </Item>
      </:left>
    </Card.Columns>
  </:card>
</EditCard>