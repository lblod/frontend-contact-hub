<EditCard @containsRequiredFields={{true}}>
  <:title>Heeft relatie met</:title>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        <Item
          @labelFor="related-provincie"
          @required={{true}}
          @errorMessage={{@model.organization.error.isSubOrganizationOf.message}}
        >
          <:label>Provincie</:label>
          <:content as |hasError|>
            <ProvinceOrganizationSelect
              @selected={{@model.organization.isSubOrganizationOf}}
              @onChange={{@updateRelatedOrg}}
              @allowClear={{(not @model.organization.isAssociatedWith)}}
              @selectedMunicipality={{@model.organization.isAssociatedWith}}
              @error={{hasError}}
              @id="related-provincie"
            />
          </:content>
        </Item>
        <Item
          @labelFor="related-gemeente"
          @required={{true}}
          @errorMessage={{@model.organization.error.isAssociatedWith.message}}
        >
          <:label>Gemeente</:label>
          <:content as |hasError|>
            <OrganizationSelect
              @selected={{@model.organization.isAssociatedWith}}
              @selectedProvince={{@model.organization.isSubOrganizationOf}}
              @onChange={{@updateRelatedSubOrg}}
              @allowClear={{true}}
              @error={{hasError}}
              @id="related-gemeente"
            />
          </:content>
        </Item>
      </:left>
    </Card.Columns>
  </:card>
</EditCard>