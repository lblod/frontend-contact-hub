<EditCard @containsRequiredFields={{true}}>
  <:title>Heeft relatie met</:title>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        <Item
          @labelFor="related-gemeente"
          @required={{true}}
          @errorMessage={{@model.organization.error.isSubOrganizationOf.message}}
        >
          <:label>Gemeente</:label>
          <:content as |hasError|>
            <MunicipalitySelect
              @selected={{@model.organization.isSubOrganizationOf}}
              @onChange={{@updateRelatedOrg}}
              @error={{hasError}}
              @id="related-gemeente"
            />
          </:content>
        </Item>
        <Item @labelFor="related-municipality" @required={{true}}>
          <:label>Provincie</:label>
          <:content>
            {{@model.organization.isSubOrganizationOf.isSubOrganizationOf.abbName}}
          </:content>
        </Item>
      </:left>
    </Card.Columns>
  </:card>
</EditCard>