<EditCard @containsRequiredFields={{true}}>
  <:title>Behoort tot</:title>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        <Item
          @labelFor="related-representative-body"
          @required={{true}}
          @errorMessage={{@model.organization.error.isAssociatedWith.message}}
        >
          <:label>Representatief orgaan</:label>
          <:content as |hasError|>
            <RepresentativeBodySelect
              @selected={{@model.organization.isAssociatedWith}}
              @onChange={{fn (mut @model.organization.isAssociatedWith)}}
              @error={{hasError}}
              @id="related-representative-body"
            />
          </:content>
        </Item>
        {{#if @hasCentralWorshipService}}
          <Item
            @labelFor="related-central-worship-service"
            @required={{false}}
            @errorMessage={{@model.organization.error.isSubOrganizationOf.message}}
          >
            <:label>Centraal bestuur</:label>
            <:content as |hasError|>
              <CentralWorshipSelect
                @selected={{@model.organization.isSubOrganizationOf}}
                @onChange={{fn (mut @model.organization.isSubOrganizationOf)}}
                @error={{hasError}}
                @id="related-central-worship-service"
              />
            </:content>
          </Item>
        {{/if}}
      </:left>
    </Card.Columns>
  </:card>
</EditCard>