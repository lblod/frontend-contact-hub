<div>
  <AuHeading @level="3" @skin="5" class="au-u-margin-bottom-tiny">
    Heeft als participanten
  </AuHeading>

  {{@model.organization.error.hasParticipants.message}}
  {{#if @model.organization.error.hasParticipants.message}}
    <div>
      <AuHelpText
        @error={{true}}
      >{{@model.organization.error.hasParticipants.message}}</AuHelpText>
    </div>
  {{/if}}

  <AuDataTable
    id="hasParticipants"
    @content={{@model.hasParticipants}}
    @noDataMessage="Geen bestuur"
    as |t|
  >
    <t.content as |c|>
      <c.header>
        <th>Type organisatie</th>
        <th>Organisatie</th>
        <th>Status</th>
        <th></th>
      </c.header>
      <c.body as |organization|>
        <td>
          {{organization.classification.label}}
        </td>
        <td>
          <OrganizationSelect
            @selected={{organization}}
            @onChange={{fn @updateHasParticipants organization}}
            @classificationCodes={{@classificationCodesParticipants}}
          />
        </td>
        <td>
          <OrganizationStatus
            @id={{organization.organizationStatus.id}}
            @label={{organization.organizationStatus.label}}
          />
        </td>
        <td>
          <AuButton
            @alert={{true}}
            @icon="bin"
            @iconAlignment="left"
            @skin="link"
            {{on "click" (fn @removeHasParticipants organization)}}
          >
            Verwijder
          </AuButton>
        </td>
      </c.body>
    </t.content>
  </AuDataTable>

  <div class="au-o-box au-o-box--small">
    <AuButton
      @skin="secondary"
      @width="block"
      @icon="add"
      @iconAlignment="left"
      {{on "click" @addNewHasParticipants}}
    >
      Voeg nieuwe gerelateerde organisatie toe
    </AuButton>
  </div>
</div>

{{#if @model.organization.foundedOrganizations.length}}
  <div>
    <AuHeading @level="3" @skin="5" class="au-u-margin-bottom-tiny">
      Heeft relatie met
    </AuHeading>
    <AuDataTable
      id="foundedOrganizations"
      @content={{@model.organization.foundedOrganizations}}
      @noDataMessage="Geen bestuur"
      as |t|
    >
      <t.content as |c|>
        <c.header>
          <AuDataTableThSortable
            @field="classification.label"
            @label="Type organisatie"
            @currentSorting={{@sort}}
          />
          <AuDataTableThSortable
            @field="name"
            @label="Organisatie"
            @currentSorting={{@sort}}
          />
          <AuDataTableThSortable
            @field="organizationStatus.label"
            @label="Status"
            @currentSorting={{@sort}}
          />
        </c.header>
        <c.body as |subOrganization|>
          <td>
            {{subOrganization.classification.label}}
          </td>
          <td>
            <AuLink
              @route="organizations.organization"
              @model={{subOrganization.id}}
            >
              {{subOrganization.abbName}}
            </AuLink>
          </td>
          <td>
            <OrganizationStatus
              @id={{subOrganization.organizationStatus.id}}
              @label={{subOrganization.organizationStatus.label}}
            />
          </td>
        </c.body>
      </t.content>
    </AuDataTable>
  </div>
{{/if}}