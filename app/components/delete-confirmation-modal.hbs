<AuModal @modalOpen={{true}} @closeModal={{@onCancel}}>
  <:title>Bevestig</:title>
  <:body>Weet je zeker dat je de relatie
    {{#if (eq @membership.member.id @organizationId)}}
      "{{@membership.role.opLabel}}"
    {{else}}
      "{{@membership.role.inverseOpLabel}}"
    {{/if}}
    wilt verwijderen?
  </:body>
  <:footer>
    <AuButtonGroup>
      <AuButton
        @alert={{true}}
        @icon="bin"
        @iconAlignment="left"
        {{on "click" (fn @onConfirm @membership)}}
      >Ja</AuButton>
      <AuButton {{on "click" @onCancel}}>Nee</AuButton>
    </AuButtonGroup>
  </:footer>
</AuModal>