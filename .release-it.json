{
  "git": {
    "commitMessage": "chore: Release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_AUTH"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it-plugins/lerna-changelog": {
      "infile": "CHANGELOG.md",
      "launchEditor": true
    }
  }
}